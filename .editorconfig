root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx}]
indent_style = space
indent_size = 4

[*.{html,xml}]
charset = utf-8
end_of_line = lf

[*.php]
indent_style = space
indent_size = 4
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.json]
indent_style = tab

[Dockerfile]
indent_style = spaces
indent_size = 4

[*.{yml,yaml}]
indent_style = spaces
indent_size = 2
